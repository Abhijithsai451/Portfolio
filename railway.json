{
  "$schema": "https://docs.railway.app/schemas/railway.schema.json",
  "services": [
    {
      "name": "web-service",
      "builder": "DOCKERFILE",
      "rootDirectory": "web_service",
      "dockerfile": "Dockerfile",
      "deploy": {
        "numReplicas": 1,
        "startCommand": "gunicorn --worker-class gevent --workers 4 --bind 0.0.0.0:8000 project.asgi:application",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300
      }
    },
    {
      "name": "chat-service",
      "builder": "DOCKERFILE",
      "rootDirectory": "chat_service",
      "dockerfile": "Dockerfile",
      "deploy": {
        "numReplicas": 1,
        "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8001",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300
      }
    }
  ]
}
